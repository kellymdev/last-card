<h3>Players:</h3>
<ul>
  <% @game.players.each do |player| %>
    <li><%= player.name %><%= " (computer)" if player.is_computer == true %></li>
  <% end %>

  <% if @game.players.count < 2 %>
    <li><%= link_to "Add Player", new_game_player_path(@game) %></li>
  <% end %>
</ul>

<%= render "deck_cards" if @game.deck_cards.size > 0 %>

<%= render "player_cards" if @player %>
